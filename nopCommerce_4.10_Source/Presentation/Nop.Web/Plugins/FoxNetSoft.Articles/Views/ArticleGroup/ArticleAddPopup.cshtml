@model FoxNetSoft.Plugin.Misc.Articles.Models.Admin.ArticleGroupModel.AddGroupArticleModel
@inject AdminAreaSettings adminAreaSettings
@{
    Layout = "_AdminPopupLayout";
    var popGridPageSize = adminAreaSettings.PopupGridPageSize;
    //page title
    ViewBag.Title = T("Admin.FoxNetSoft.Plugin.Misc.Articles.ArticleGroup.AddArticle").Text;
}

@using Nop.Core.Domain.Common

@if (ViewBag.RefreshPage == true)
{
    <script type="text/javascript">
        try {window.opener.document.forms['@(Context.Request.Query["formId"])'].@(Context.Request.Query["btnId"]).click();}
        catch (e){}
        window.close();
    </script>
}

<form asp-controller="ArticleGroup" asp-action="ArticleAddPopup"
      asp-route-groupId="@Context.Request.Query["groupId"]"
      asp-route-btnId="@Context.Request.Query["btnId"]"
      asp-route-formId="@Context.Request.Query["formId"]">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.FoxNetSoft.Plugin.Misc.Articles.ArticleGroup.AddArticle")
        </h1>
        <div class="pull-right">
            &nbsp;
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default panel-search panel-popup">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="col-sm-5">
                                        <nop-label asp-for="SearchArticleTitle" />
                                    </div>
                                    <div class="col-sm-7">
                                        <nop-editor asp-for="SearchArticleTitle" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <button type="button" id="search-articles" class="btn btn-primary btn-search">
                                    <i class="fa fa-search"></i>
                                    @T("Admin.Common.Search")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-body">
                        <div id="articles-grid"></div>
                        <script>
                            $(document).ready(function () {
                                $("#articles-grid").kendoGrid({
                                    dataSource: {
                                        type: "json",
                                        transport: {
                                            read: {
                                                url: "@Html.Raw(Url.Action("ArticleAddPopupList", "ArticleGroup"))",
                                                type: "POST",
                                                dataType: "json",
                                                data: additionalData
                                            }
                                        },
                                        schema: {
                                            data: "Data",
                                            total: "Total",
                                            errors: "Errors"
                                        },
                                        error: function(e) {
                                            display_kendoui_grid_error(e);
                                            // Cancel the changes
                                            this.cancelChanges();
                                        },
                                        pageSize: @(popGridPageSize),
                                        serverPaging: true,
                                        serverFiltering: true,
                                        serverSorting: true
                                    },
                                    pageable: {
                                        refresh: true
                                    },
                                    editable: {
                                        confirmation: false,
                                        mode: "inline"
                                    },
                                    scrollable: false,
                                    columns: [{
                                        field: "Id",
                                        title: "@T("Admin.Common.Check")",
                                        template: "<input type='checkbox' name='SelectedArticleIds' value='#=Id#' />",
                                        attributes: {
                                            style: "text-align:center"
                                        },
                                        width: 50
                                    }, {
                                        field: "Title",
                                        title: "@T("Admin.FoxNetSoft.Plugin.Misc.Articles.Article.Fields.Title")"
                                    }, {
                                        field: "Published",
                                        title: "@T("Admin.FoxNetSoft.Plugin.Misc.Articles.Published")",
                                        width: 100,
                                        headerAttributes: { style: "text-align:center" },
                                        attributes: { style: "text-align:center" },
                                        template: '# if(Published) {# <i class="fa fa-check true-icon"></i> #} else {# <i class="fa fa-close false-icon"></i> #} #'
                                    }]
                                });
                            });
                        </script>

                        <script type="text/javascript">
                            $(document).ready(function () {
                                $('#search-articles').click(function () {
                                    var grid = $('#articles-grid').data('kendoGrid');
                                    grid.dataSource.page(1); //new search. Set page size to 1
                                    grid.dataSource.read();
                                    return false;
                                });
                            });

                            $("#@Html.IdFor(model => model.SearchArticleTitle)").keydown(function (event) {
                                if (event.keyCode == 13) {
                                    $("#search-articles").click();
                                    return false;
                                }
                            });

                            function additionalData() {
                                var data = {
                                    SearchArticleTitle: $('#@Html.IdFor(model => model.SearchArticleTitle)').val()
                                };
                                addAntiForgeryToken(data);
                                return data;
                            }
                        </script>
                    </div>
                    <div class="panel-footer">
                        <button type="submit" name="save" class="btn bg-blue">
                            <i class="fa fa-floppy-o"></i>
                            @T("Admin.Common.Save")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>