@model FoxNetSoft.Plugin.Misc.Articles.Models.ArticleTagListModel
@if (Model.Tags.Any())
{
    <div class="block block-popular-articletags">
        <div class="title">
            <strong>@T("FoxNetSoft.Plugin.Misc.Articles.TagCloud")</strong>
        </div>
        <div class="listbox">
            <ul class="tags">
                @foreach (var item in Model.Tags)
                {
                    <li>
                        <a href="@Url.RouteUrl("ArticleByTag", new { tag = item.Name })" style="font-size:@(Model.GetFontSize(item))%;">@item.Name</a>
                    </li>
                }
            </ul>
        </div>
    </div>
}
