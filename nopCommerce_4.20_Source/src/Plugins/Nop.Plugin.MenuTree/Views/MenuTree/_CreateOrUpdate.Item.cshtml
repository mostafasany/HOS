@model Nop.Plugin.MenuTree.Models.MenuTreeModel
@using Nop.Web.Framework.Models.DataTables;
@using  Nop.Plugin.MenuTree.Models;
@using Microsoft.AspNetCore.Routing;

@if (Model.Id > 0 && Model.EntityName !=0.ToString())
{
<div class="panel-body">
    @await Html.PartialAsync("Table", new DataTablesModel
{
    Name = "items-grid",
    UrlRead = new DataUrl("ItemList", "MenuTree", new RouteValueDictionary { [nameof(Model.MenuTreeItemSearchModel.menutreeId)] = Model.MenuTreeItemSearchModel.menutreeId}),
    UrlDelete = new DataUrl("ItemDelete", "MenuTree", null),
    UrlUpdate = new DataUrl("ItemUpdate", "MenuTree", null),
    Length = Model.MenuTreeItemSearchModel.PageSize,
    LengthMenu = Model.MenuTreeItemSearchModel.AvailablePageSizes,
    ColumnCollection = new List<ColumnProperty>
        {
            new ColumnProperty(nameof(MenuTreeItemModel.Name))
            {
                Title = "Item Name"
            },
            new ColumnProperty(nameof(MenuTreeItemModel.Published))
            {
                Title = "Published",
                Width = "150",
                ClassName = NopColumnClassDefaults.CenterAll,
                Render = new RenderBoolean(),
                Editable = true,
                EditType = EditType.Checkbox
            },
            new ColumnProperty(nameof(MenuTreeItemModel.DisplayOrder))
            {
                Title = "Display Order",
                Width = "150",
                ClassName = NopColumnClassDefaults.CenterAll,
                Editable = true,
                EditType = EditType.Number
            },
            new ColumnProperty(nameof(MenuTreeItemModel.Id))
            {
                Title = T("Admin.Common.Edit").Text,
                Width = "200",
                ClassName =  NopColumnClassDefaults.Button,
                Render = new RenderButtonsInlineEdit()
            },
            new ColumnProperty(nameof(MenuTreeItemModel.Id))
            {
                Title = T("Admin.Common.Delete").Text,
                Width = "100",
                Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                ClassName = NopColumnClassDefaults.Button
            }
        }
})
</div>
    <div class="panel-footer">
        <button type="submit" id="btnAddNewItem"
                onclick="javascript:OpenWindow('@(Url.Action("ItemAddPopup", "MenuTree", new { MenutreeId = Model.Id, btnId = "btnRefreshItems", formId = "menutree-form" }))', 800, 800, true); return false;"
                class="btn btn-primary">
          Add Item
        </button>
        <input type="submit" id="btnRefreshItems" style="display: none" />
        <script>
            $(document).ready(function () {
                $('#btnRefreshItems').click(function () {

                    updateTable('#items-grid');

                    return false;
                });
            });
    </script>
</div>
}
else
{
    <div class="panel-body">
        @T("Please save the menu tree and choose item type before add items")
    </div>
}

