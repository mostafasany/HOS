@model Nop.Plugin.MenuTree.Models.MenuTreeModel
@{
    ViewBag.Title = "Add New";
    Html.SetActiveMenuItemSystemName("MenuTree");

    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-controller="MenuTree" asp-action="Create" method="post" id="menutree-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Add New")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">Back To List</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("/Plugins/MenuTree/Views/MenuTree/_CreateOrUpdate.cshtml", Model)
</form>